{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "configure",
      "type": "process",
      "command": "cmake",
      "args": [
        "-DCMAKE_BUILD_TYPE=Debug",
        "-GMinGW Makefiles",
        "-Bbuild"
      ],
      "problemMatcher": []
    },
    {
      "label": "build",
      "type": "process",
      "command": "cmake",
      "args": [
        "--build",
        "build"
      ],
      "problemMatcher": "$gcc",
      "group": "build"
    },
    {
      "label": "run and pause",
      "type": "pause-console",
      "command": "${workspaceFolder}\\bin\\mini_lisp.exe",
      "options": {
        "cwd": "${workspaceFolder}\\bin"
      },
      "dependsOn": "build"
    },
    {
      "type": "cmake",
      "label": "CMake: configure",
      "command": "configure",
      "problemMatcher": [],
      "detail": "CMake template configure task",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
